<div class = "col-sm-8 col-sm-offset-2">
<% if @contact.errors.any? %>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <%= pluralize(@contact.errors.count, "error") %> occured.
        </div>
        <div class="panel-body">
            <ul>
                <% @contact.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>

    <%= form_for @contact, :class => 'form-horizontal' do |f| %>
       <div class="form-group custom-form">
            <%= f.label :name, :class => 'control-label col-sm-2' %>
           <div class="col-sm-10">
                <%= f.text_field :name, :class => 'form-control' %>
           </div>
       </div>

       <div class="form-group custom-form">
            <%= f.label :address, :class => 'control-label col-sm-2' %>
           <div class="col-sm-10">
                <%= f.text_field :address, :class => 'form-control'%>
           </div>
       </div>

       <div class="form-group custom-form">
            <%= f.label :mobile, :class => 'control-label col-sm-2' %>
           <div class="col-sm-10">
                <%= f.text_field :mobile, :class => 'form-control'%>
           </div>
       </div>

       <div class="form-group custom-form">
            <%= f.label :email, :class => 'control-label col-sm-2' %>
           <div class="col-sm-10">
                <%= f.text_field :email, :class => 'form-control'%>
           </div>
       </div>

       <div class="form-group custom-form">
            <%= f.label :phone, :class => 'control-label col-sm-2' %>
           <div class="col-sm-10">
                <%= f.text_field :phone, :class => 'form-control'%>
           </div>
       </div>

       <div class="form-group custom-form">
            <div class="col-sm-2 col-sm-offset-2">
                <%= f.submit "Save", :class => 'btn btn-info' %>
            </div>
       </div>          
                
    <% end %>
</div>
